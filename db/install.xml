<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/onlinejudge/db" VERSION="20250711" COMMENT="XMLDB file for Moodle local/onlinejudge"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="onlinejudge_tasks" COMMENT="Details of tasks">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="true" UNSIGNED="true"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Source coursemodule ID"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Related user"/>
        <FIELD NAME="language" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Programming language"/>
        <FIELD NAME="memlimit" TYPE="int" LENGTH="20" NOTNULL="true" DEFAULT="1048576" SEQUENCE="false" COMMENT="max memory"/>
        <FIELD NAME="cpulimit" TYPE="int" LENGTH="20" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="max cpu"/>
        <FIELD NAME="input" TYPE="binary" LENGTH="big" NOTNULL="false" SEQUENCE="false" COMMENT="input data"/>
        <FIELD NAME="output" TYPE="binary" NOTNULL="false" SEQUENCE="false" COMMENT="output data"/>
        <FIELD NAME="compileonly" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="compile_lm_option" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="1" SEQUENCE="false" COMMENT="Compiler Parameter [Link the math library]"/>
        <FIELD NAME="compile_warnings_option" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="1" SEQUENCE="false" COMMENT="Compilation Parameter [Enables all compiler's warning messages]"/>
        <FIELD NAME="compile_static_option" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="1" SEQUENCE="false" COMMENT="Compilation Parameter [Allow only static libraries and not shared libraries]"/>
        <FIELD NAME="component" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Who submitted this task"/>
        <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="stdout" TYPE="binary" NOTNULL="false" SEQUENCE="false" COMMENT="Output of user's program"/>
        <FIELD NAME="stderr" TYPE="binary" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="compileroutput" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="infoteacher" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="infostudent" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="cpuusage" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="memusage" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="submittime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="judgetime" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="var1" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="var2" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="var3" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="var4" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="deleted" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="cmid" TYPE="foreign" FIELDS="cmid" REFTABLE="course_modules" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="judgetime" UNIQUE="false" FIELDS="judgetime"/>
        <INDEX NAME="submittime" UNIQUE="false" FIELDS="submittime"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
